<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/holder_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/container"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:elevation="2dp">

            <RelativeLayout
                android:id="@+id/item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/id_notification_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/id_notification_body"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_notification_title"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-24dp"
                    android:layout_marginEnd="16dp"
                    android:layout_toEndOf="@+id/id_notification_title"

                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="5"
                    android:text="Description"
                    android:textColor="#393535"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/time_program_item_Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_notification_title"
                    android:text=" Time" />

                <TextView
                    android:id="@+id/id_notification_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_notification_title"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/time_program_item_Id"
                    android:text="12:00 PM"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>