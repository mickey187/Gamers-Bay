<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/holder_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:outlineSpotShadowColor="@color/black"
    android:layout_margin="5dp"
    app:cardCornerRadius="2dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/id_notification_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Title will appear here"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/id_notification_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_notification_title"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="35dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="5"
                    android:text="Description messga will appear here with uner from the developer Abraham zenebe"
                    android:textColor="#393535"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/id_notification_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_notification_body"
                    android:layout_marginLeft="10dp"
                    android:text="Monday 12:00 PM"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>