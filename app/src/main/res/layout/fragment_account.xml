<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="20dp"
            android:background="#554AE8">

            <ImageView
                android:id="@+id/user_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/gameart"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:fontFamily="@font/montserrat"
                android:layout_toRightOf="@+id/user_avatar"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:textColor="#ffffff"
                android:textFontWeight="800"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:includeFontPadding="false"
                android:textColor="#ffffff"
                android:layout_toRightOf="@+id/user_avatar"
                android:layout_below="@+id/user_name"
                android:layout_marginLeft="20dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="-70dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#554AE8"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/dollor"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/user_balance"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20sp"
                        android:includeFontPadding="false"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/montserrat"
                        android:textFontWeight="500"/>


                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#554AE8"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/dollor"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/user_balanc"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 ETB"
                        android:textSize="20sp"
                        android:includeFontPadding="false"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/montserrat"
                        android:textFontWeight="500"/>


                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/topup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:text="Top Up"
                android:drawableLeft="@drawable/ic_baseline_add_circle_24"
                android:textSize="20sp"
                android:textAlignment="textStart"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />

            <Button
                android:id="@+id/withdraw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:text="With Draw"
                android:drawableLeft="@drawable/withdraw"
                android:textSize="20sp"
                android:textAlignment="textStart"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />

            <Button
                android:id="@+id/edit_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:text="Edit Account"
                android:drawableLeft="@drawable/ic_baseline_edit_24"
                android:textSize="20sp"
                android:textAlignment="textStart"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />

            <Button
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:text="Share With Friends"
                android:drawableLeft="@drawable/ic_baseline_share_24"
                android:textSize="20sp"
                android:textAlignment="textStart"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />

            <Button
                android:id="@+id/privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy and Policy"
                android:drawableLeft="@drawable/ic_baseline_policy_24"
                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:textAlignment="textStart"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />

            <Button
                android:id="@+id/help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:text="Help"
                android:drawableLeft="@drawable/ic_baseline_help_24"
                android:textSize="20sp"
                android:textAlignment="textStart"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />

            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_logout"
                android:drawableTint="@color/colorGray"
                android:drawablePadding="10dp"
                android:layout_marginStart="3dp"
                android:text="logout"
                android:textSize="20sp"
                android:textAlignment="textStart"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>