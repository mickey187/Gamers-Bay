<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GamersBay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">@color/white</item>
        <item name="backgroundColorForLayout">@color/white</item>
        <item name="backgroundTintForCardview">@color/white</item>
        <item name="backgroundTintForCardview2">@color/colorPurple</item>
        <item name="navigationBarBackground">@color/white</item>
        <item name="textColor">@color/purple_700</item>
        <item name="navIconTintPressed">@color/purple_500</item>
        <item name="navIconTintNotPressed">@color/colorGray</item>
        <item name="backgroundColorForRelativeLayout">@color/colorPurple</item>
        <item name="drawableTint">@color/purple_700</item>
        <item name="backgrounds">@color/white</item>


    </style>

    <style name="darkTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryVariant">@color/colorDarkSecondary</item>
        <item name="colorOnPrimary">@color/colorDarkThird</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">@color/colorDarkThird</item>
        <item name="backgroundColorForLayout">@color/colorDarkPrimary</item>
        <item name="backgroundTintForCardview">@color/colorDarkThird</item>
        <item name="backgroundTintForCardview2">@color/colorDarkThird</item>
        <item name="textColor">@color/white</item>
        <item name="navigationBarBackground">@color/colorDarkPrimary</item>
        <item name="navIconTintPressed">@color/white</item>
        <item name="navIconTintNotPressed">@color/colorGray</item>

        <item name="backgroundColorForRelativeLayout">@color/colorDarkSecondary</item>
        <item name="drawableTint">@color/white</item>
        <item name="backgrounds">@color/colorDarkPrimary</item>


    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="Theme.MaterialComponents.Light">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.GamersBay.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GamersBay.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GamersBay.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>